<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="?attr/colorSurface"
     android:id="@+id/root_layout">

    <com.google.android.material.appbar.AppBarLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
             android:layout_height="?attr/actionBarSize"
             android:layout_width="match_parent"
             android:background="?attr/colorSurface"
             android:fontFamily="@font/poppins_semibold"
             app:title="@string/setting_title_page"
             app:titleTextColor="?attr/colorOnBackground"
             app:menu="@menu/top_app_bar_menu"
             app:navigationIcon="@drawable/arrow_back_24px"
             android:id="@+id/topAppBar">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         app:layout_behavior="@string/appbar_scrolling_view_behavior"
         android:padding="20dp"
         android:clipToPadding="false">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:animateLayoutChanges="true"
             android:orientation="vertical">

    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Download Location"
         android:textSize="18sp"
         android:fontFamily="@font/poppins_semibold"
         android:textColor="@color/colorOnBackground"
         android:layout_marginTop="0dp"
         android:layout_marginBottom="8dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Atur folder tempat file hasil download disimpan"
    android:textSize="13sp"
    android:textColor="@color/hint"
    android:layout_marginBottom="12dp"/>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    android:backgroundTint="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CURRENT PATH -->
        <TextView
            android:id="@+id/textCurrentDirectory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/storage/emulated/0/Download"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="middle"
            android:textColor="@color/hint"
            android:fontFamily="@font/poppins_semibold"/>

        <!-- BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonChangeDirectory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Folder"
            android:layout_marginTop="12dp"
            app:icon="@drawable/ic_folder_24px"
            app:iconPadding="8dp"
            app:cornerRadius="14dp"
            app:iconTint="@color/skeleton_bg"
            android:textColor="@color/colorOnBackground"
            app:backgroundTint="@color/colorPrimary"
            style="@style/Widget.Tiktokly.TonalButton"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>